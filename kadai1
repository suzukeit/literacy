   $win = 0;
   }
//負けた回数の管理
if(isset(【①】['lose'])){
   $lose = 【①】['lose'];
   } else {
   $lose = 0;
   }
//あいこの回数の管理
if(isset(【①】['aiko'])){
   $aiko = 【①】['aiko'];
   } else {
   $aiko = 0;
   }
?>

